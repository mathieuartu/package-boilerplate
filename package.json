{
    "name": "package-boilerplate",
    "version": "0.0.0",
    "scripts": {
        "build": "tsc && vite build",
        "format": "prettier ./src --write",
        "lint": "eslint ./src --ext .ts",
        "test": "jest",
        "ci": "npm run format && npm run lint && npm run test && npm run build",
        "publish:preview": "npm pack --dry-run"
    },
    "files": [
        "dist"
    ],
    "description": "A boilerplate to create packages using Vite and TypeScript",
    "author": "Mathieu Artu",
    "license": "MIT",
    "homepage": "https://github.com/project",
    "repository": {
        "type": "git",
        "url": "https://github.com/project.git"
    },
    "bugs": {
        "url": "https://github.com/project/issues"
    },
    "keywords": [
        "package"
    ],
    "main": "./dist/index.umd.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.4.2",
        "prettier": "^2.8.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "vite": "^4.1.0",
        "vite-plugin-dts": "^1.7.2"
    }
}
